.body{
  padding: 0 20rpx;
}
.none{
  color: #fff;
}
.nav {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 20rpx;
  padding-top: 53rpx;
  padding-bottom: 10rpx; 
  margin-bottom: 7rpx;
}
.nav .tab{
  flex: 1;
}
.tab image{
  display: block;
  width: 45rpx;
  height: 51rpx;
  margin: 0px auto;
}
.btn{
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #000;
  font-size: 26rpx;
}

.red {
  color: #DC4F4F;
}
.yellow {
  color: #FAB53E;
}
.blue {
  color: #2382C2;
}
.green {
  color: #00CFB4;
}
.skyblue{
  color: rgb(16,211,254)
}
.show {
  display: block;
  text-align: center;
  line-height: 200rpx;
}

.hidden {
  display: none;
  text-align: center;
  line-height: 200px;
}
.hide{
 display: none;
}
/*订单展示  */
.order-header{
  display: flex;
  color: #fff;
  border-bottom: 1rpx solid rgba(255,255,255,0.5);
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
  padding: 40rpx 0rpx;
}
.order-header .orderlist{
  flex: 1;
  font-size: 34rpx;
  text-indent: 10rpx;
   
}
.order-header .completion{
  width: 120rpx;
  font-size: 28rpx;
  position: relative;
}


/*下拉  */

.span1{
  display: block;
  position: absolute;
  top: 16rpx;
  right: 8rpx;
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-top: 1px solid #fff;
  border-right: 1px solid #fff;
  transform: rotate(45deg);

}
.span2{
  display: block;
  position: absolute;
  top: 13rpx;
  right: 0rpx;
  content: '';
  width: 15rpx;
  height: 15rpx;
  border-top: 1rpx solid #fff;
  border-right: 1rpx solid #fff;
  transform: rotate(135deg);

}
.borderl{
  border-left: 7rpx solid #fff;
}
.bordern{
  border-left: 7rpx solid rgba(255,255,255,0);
}
.show-infos{
  padding-bottom: 30rpx;
}
.show-infos .infos{
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  border-bottom:1rpx solid rgba(255,255,255,0.4);
  padding-left: 35rpx;
  padding-right: 31rpx;
}
.infos_title{
  width: 220rpx;
  text-align: left;
}
.infos_content{
  flex: 1;
  text-align: right;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.gobtn{
  width: 646rpx;
  margin: 52rpx auto 18rpx auto;
  background: #fff;
  height: 94rpx;
  line-height: 94rpx;
  color: #0D79BE;
  border-radius: 47rpx;
}