/* 弹框 */
.show-btn {
 margin-top: 100rpx;
 color: #22cc22;
}
 
.modal-mask {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.3;
 overflow: hidden;
 z-index: 9000;
 color: #fff;
}
 
.modal-dialog {
 width: 540rpx;
 overflow: hidden;
 position: fixed;
 top: 50%;
 left: 0;
 z-index: 9999;
 background: #f9f9f9;
 margin: -180rpx 105rpx;
 border-radius: 36rpx;
 padding-bottom: 14rpx;
}
 
.modal-title {
 padding: 26rpx 0 23rpx 0;
 font-size: 48rpx;
 color: #030303;
 text-align: center;
}
.model-line{
  width: 540rpx;
  height: 4rpx;
  background:rgba(0,0,0,1);
  opacity:0.02; 
}
.modal-content {
 padding: 47rpx 0 63rpx 0;
 font-size: 24rpx;
 color: #000000;
 text-align: center;
}
 
 /* 关闭 */
.btn-cancel {
 color: #666;
 text-align: center;
 position: absolute;
 right: 28rpx;
 top: 26rpx;
}
.close-img{
  width: 40rpx;
  height: 40rpx;
}
.btn-confirm {
 width: 86%;
 color: #0D79BE;
 text-align: center;
 height: 63rpx;
 line-height: 63rpx;
 font-size: 28rpx;
 border: 2rpx solid #0D79BE;
 border-radius: 30rpx;
 margin: 0 40rpx;
}





