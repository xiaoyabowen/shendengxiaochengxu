}

/* 添加地址按钮 */
.address-renew{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 86%;
  background: #fff !important;
  height: 94rpx;
  border-radius: 47rpx;
  box-shadow:0px 4px 20px rgba(21,115,153,0.18);
  position: fixed;
  left: 0;
  bottom: 48rpx;
  margin: 0 52rpx;
  pointer-events:auto;
}
.add-btn{
  width: 37rpx;
  height: 37rpx;
  margin-right: 18rpx;
}
.address-color{
  color: #0D79BE;
  font-size: 36rpx;
}

