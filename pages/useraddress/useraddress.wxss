/* pages/useraddress/useraddress/useraddress.wxss */
/* 地址信息 */

.content{
  padding: 0 20rpx;
  
}

.address-box{
  overflow: hidden;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  min-height: calc(100vh - 162rpx);
  background: #fff;
  padding-bottom: 142rpx;
}

.address{
  padding: 61rpx 37rpx 25rpx 53rpx;
  border-bottom: 2rpx solid #0D79BE; 
}
.addressNone{
  display: none;
}
/* 用户名 */
.user{
  display: flex;
  margin-bottom: 34rpx;
  
}
.user-name{
  margin-right: 30rpx;
  min-width: 50rpx;
  font-size: 26rpx;
  color: #0D0C0C;
  font-weight: bold;
}
.user-phone{
  font-size: 24rpx;
  color: #000;
  font-weight: bold;
}
.user-address{
  border-bottom: 1rpx solid #f7f7f7;
  padding-bottom: 20rpx;
}
.address-style{
  font-size: 24rpx;
  color: #787777;

}
/* 编辑设为默认 */
.edit{
  display: flex;
  height: 74rpx;
}
.edit-left{
  flex: 1;
  align-items: center;
}
.edit-right{
  display: flex;
  
  align-items: center;
}
.edit-btn,.del-btn{
  display: flex;
}
.edit-img,.del-img{
  width: 30rpx;
  height: 34rpx;
  margin-right: 6rpx;
}


